<h1><%= I18n.t 'welcome' %></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= I18n.t 'pet.name' %></th>
      <th scope="col"><%= I18n.t 'pet.birthday' %></th>
      <th scope="col"><%= I18n.t 'pet.breed' %></th>
      <th scope="col"><%= I18n.t 'pet.category' %></th>
    </tr>
  </thead>

  <tbody>
  <% @pets.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <th><%= item.name %></th>
      <th><%= item.birthday.strftime("%d/%m/%Y") %></th>
      <th><%= item.breed %></th>
      <th><%= item.category %></th>
    </tr>
  <% end %>

  </tbody>
</table>

<%= will_paginate @pets %>
